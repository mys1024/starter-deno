{
  "tasks": {
    "run":        "deno run   --lock=deno.lock ./src/main.ts",
    "run:watch":  "deno run   --lock=deno.lock --watch ./src/main.ts",
    "cache":      "deno cache --lock=deno.lock ./src/deps.ts",
    "cache:lock": "deno cache --lock=deno.lock --lock-write ./src/deps.ts",
    "test":       "deno test",
    "test:watch": "deno test --watch",
    "test:cover": "deno test --coverage=cov_profile",
    "coverage":   "deno coverage cov_profile"
  }
}
